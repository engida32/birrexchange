generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BankExchangeRate {
  id           Int       @id @default(autoincrement())
  bank_name    String
  buying_price  Float
  selling_price Float
  bank_logo     String
  currency_name String 
  is_latest_rate Boolean   @default(false)
  is_last_rate Boolean   @default(false)
  created_at   DateTime  @default(now())
  updated_at   DateTime? @updatedAt
}

model BinanceExchangeRate { 
  id           Int       @id @default(autoincrement())
  buying_price  Float
  selling_price Float
  currency_name String
  is_latest_rate Boolean
  is_last_rate Boolean
  created_at   DateTime  @default(now())
  updated_at   DateTime? @updatedAt
}